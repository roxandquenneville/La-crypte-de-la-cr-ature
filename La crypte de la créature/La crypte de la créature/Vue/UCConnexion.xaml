<UserControl x:Class="La_crypte_de_la_creature.Vue.UCConnexion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Label Height="30" Grid.ColumnSpan="2" Margin="10,10,10,60" Visibility="Hidden" Name="lblErreur"/>
        
        <Label  Content="Utilisateur :" Margin="80,19,70,51" Height="30"  Width="150" Foreground="White"  Grid.ColumnSpan="2" >
            <Label.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="2"/>
            </Label.Effect>
        </Label>

        <TextBox Background="AliceBlue" Margin="80,49,70,26" Grid.ColumnSpan="2"  Height="25" Width="150" Text="{Binding RetrieveArgs.nomUsager}" Name="tbxNomUsager" />
        <Label Content="Mot de passe :" Margin="80,85,70,90"  Height="25" Width="150" Foreground="White" Grid.ColumnSpan="2" Grid.RowSpan="2" >
            <Label.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <TextBox Background="AliceBlue" Margin="80,10,70,65" Height="25" Width="150" Grid.ColumnSpan="2" Grid.Row="1" Text="{Binding RetrieveArgs.motDePasse , UpdateSourceTrigger=PropertyChanged}" />
        <Button  Height="30" Width="70" Grid.Column="0" Grid.Row="2" Margin="0,10,9,0" Content="Connexion" IsDefault="True" Click="Btn_Connexion" HorizontalAlignment="Right" VerticalAlignment="Top"  />
        <Button Height="30" Width="70" Grid.Column="1" Grid.Row="2" Margin="10,10,0,0" Content="Quitter" Click="Btn_Quitter" IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label Grid.Column="0" Grid.Row="2" Content="Pas de compte? Créer en un maintenant." Foreground="Blue" Grid.ColumnSpan="1" Margin="0,50,-40,0" MouseDown="Lbl_Click" HorizontalAlignment="Right" Width="88"  >
            <Label.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="1" Color="White"/>
            </Label.Effect>
        </Label>
    </Grid>


</UserControl>
